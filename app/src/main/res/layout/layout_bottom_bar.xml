<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_bottomBar_LinearLayout"
    android:background="@drawable/background_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="56sp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:orientation="horizontal">

        <EditText
            android:visibility="invisible"
            android:id="@+id/layout_bottomBar_EditText"
            android:paddingHorizontal="8sp"
            android:hint="Comment"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginStart="16sp"
            android:background="@drawable/login_edittext_shape"
            android:layout_width="216sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            layout="@layout/layout_like_collect_share_sheet"/>

    </LinearLayout>


</LinearLayout>